<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<TextView
	    android:id="@+id/direction_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/send_direction" />

	<EditText
	    android:id="@+id/direction_text"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/direction_label" />

    <TextView
        android:id="@+id/topic_label"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
	    android:text="主题"
	    android:layout_below="@id/direction_text"/>
    <EditText 
       android:id="@+id/topic_text"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/topic_label"/>
	<TextView
	    android:id="@+id/content_label"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
	    android:text="内容"
	    android:layout_below="@id/topic_text"/>
	<EditText 
	    android:id="@+id/content_text"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:lines="8"
    	android:layout_below="@id/content_label"/>
	<Button
	    android:id="@+id/send_button"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_alignRight="@+id/content_text"
	    android:layout_below="@+id/content_text"
	    android:layout_marginTop="10dp"
	    android:text="发送" 
	    />
	
    

</RelativeLayout>